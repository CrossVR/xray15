#include "common.h"

struct 	v2p
{
 	half2 	tc0: 	TEXCOORD0;	// base
  	half3	c0:	COLOR0;
};

uniform float		m_AlphaRef;

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main_ps_1_1	( v2p I )	: COLOR
{
	half4	t_base 	= tex2D		(s_base,I.tc0);
	clip						(t_base.a - m_AlphaRef);
	half3	final 	= t_base*I.c0*2;

	// out
	return  half4	(final, t_base.a);
}
